<?php
class cController {
  private $model;
  private $view;
   
  public function __construct($model, $view) {
    $this->model = $model;
	$this->view = $view;
  }
  
  public function action($action_to_do){
	   
	  switch ($action_to_do) {
      case "dashboard":
        if(isset($_FILES["filename"]["tmp_name"]) && is_uploaded_file($_FILES["filename"]["tmp_name"]))
		   {   
	          $this->model->setFile($_FILES["filename"]["tmp_name"]);
			  $this->model->parseLogInToDB();
			  $this->view->print_dashboard(); 
		   } 
        break;
      case "upload":
        $this->view->print_upload_form();
        break;
      default:
	    $this->view->print_upload_form();
     }


	  
	  
  }
}
?>